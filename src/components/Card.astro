---
export interface Props {
  title: string;
  body: string;
  href: string;
  tags: string[];
}

const { href, title, body, tags } = Astro.props;
---

<li class="bg-white rounded-md shadow-md hover:shadow-xl transition">
  <a href={href}>
    <div class="flex flex-col gap-y-2 p-6">
      <h2 class="font-semibold text-lg pr-4 pt-2">
        {title}
      </h2>
      <p>
        {body}
      </p>
      {
        tags && (
          <div class="flex gap-x-1">
            {tags?.map((tag) => (
              <span class="bg-zinc-100 border px-2 text-sm text-fuchsia-500 font-bold rounded-md transition shadow w-fit">
                {tag}
              </span>
            ))}
          </div>
        )
      }
    </div>
  </a>
</li>
